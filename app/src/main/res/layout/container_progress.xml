<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="matchingInfo"
            type="com.example.protalktime.data.model.meeting.MatchingListBody" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:elevation="111dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_solid_white">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:gravity="center_vertical"
            android:id="@+id/layout_linear_inform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_calendar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/img_3d_calendar_1500"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_calendar"
                style="@style/Text_14_Medium.Primary_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"

                android:text="7월 4일 14시" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_location"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/img_3d_location_1500"

                app:layout_constraintBottom_toBottomOf="@id/tv_calendar"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Text_14_Medium.Primary_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="교내 | 후생관 | 바비든든"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:gravity="center_horizontal"
            android:id="@+id/tv_progress_script"
            style="@style/Text_14_Medium.Primary_03"
            android:text="깔끔하게 바비든든 같이 뚝딱하실 분 모십니다."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/layout_linear_inform"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/bg_progress_bar"
            app:layout_constraintTop_toBottomOf="@id/tv_progress_script"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            app:layout_constraintTop_toBottomOf="@id/layout_progress_status"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            android:id="@+id/rv_prgross_waiting"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="vertical"-->
<!--            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"-->
<!--            app:layout_behavior="@string/appbar_scrolling_view_behavior"-->
<!--            tools:listitem="@layout/item_wating_list" />-->


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
