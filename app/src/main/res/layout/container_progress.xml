<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

        <variable
            name="matchingInfo"
            type="com.example.protalktime.data.model.meeting.MatchingListBody" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_calendar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/img_3d_calendar_1500"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_calendar"
            style="@style/Text_14_Medium.Primary_03"
            date="@{matchingInfo.meetTime}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_calendar"
            app:layout_constraintStart_toEndOf="@id/iv_calendar"
            app:layout_constraintTop_toTopOf="@id/iv_calendar"
            app:layout_constraintEnd_toStartOf="@id/iv_location"
            app:layout_constraintHorizontal_chainStyle="spread"
            tools:text="7월 4일 14시" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_location"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/img_3d_location_1500"
            app:layout_constraintStart_toEndOf="@id/tv_calendar"
            app:layout_constraintTop_toTopOf="@id/tv_calendar"
            app:layout_constraintBottom_toBottomOf="@id/tv_calendar"/>

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Text_14_Medium.Primary_03"
            android:text="@{matchingInfo.bigLocation +'|'+matchingInfo.smallLocation+'|'+matchingInfo.wishFood}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_calendar"
            app:layout_constraintStart_toEndOf="@id/iv_location"
            app:layout_constraintTop_toTopOf="@id/iv_calendar" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
