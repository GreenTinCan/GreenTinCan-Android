<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Bottom Navigation Style -->
    <style name="Widget.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.BottomNavigationView.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/Primary_08</item>
    </style>

    <style name="Widget.BottomNavigationView.InActive" parent="Widget.BottomNavigationView">
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
    </style>

    <style name="Widget.BottomNavigationView.Active" parent="Widget.BottomNavigationView">
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
    </style>

    <!-- Chip Button Style -->
    <style name="CustomFilterChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/selector_chip_color</item>
        <item name="android:textColor">@color/selector_chip_text_color</item>
        <item name="android:textAppearance">@style/Text_14_Regular</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="rippleColor">@color/transparent</item>
    </style>

    <style name="CustomFilterGrayChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/Base_08</item>
        <item name="android:textColor">@color/Primary_03</item>
        <item name="android:textAppearance">@style/Text_12_Regular</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="android:selectable">false</item>
        <item name="minHeight">44dp</item>
        <item name="rippleColor">@color/transparent</item>
    </style>
    <style name="ImageWithChipAllergy" parent="@style/Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/Base_08</item>
        <item name="android:textColor">@color/Primary_03</item>
        <item name="android:textAppearance">@style/Text_12_Regular</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="chipIcon">@drawable/ic_allergy_20</item>
        <item name="chipIconEnabled">true</item>
        <item name="android:selectable">false</item>
        <item name="minHeight">44dp</item>
        <item name="rippleColor">@color/transparent</item>
    </style>
    <style name="ImageWithChipFavor" parent="@style/Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/Base_08</item>
        <item name="android:textColor">@color/Primary_03</item>
        <item name="android:textAppearance">@style/Text_12_Regular</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="chipIcon">@drawable/ic_favor_20</item>
        <item name="chipIconEnabled">true</item>
        <item name="android:selectable">false</item>
        <item name="minHeight">44dp</item>
        <item name="rippleColor">@color/transparent</item>
    </style>
    <style name="ImageWithChipNonFavor" parent="@style/Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/Base_08</item>
        <item name="android:textColor">@color/Primary_03</item>
        <item name="android:textAppearance">@style/Text_12_Regular</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="chipIcon">@drawable/ic_nonfavor_20</item>
        <item name="chipIconEnabled">true</item>
        <item name="android:selectable">false</item>
        <item name="minHeight">44dp</item>
        <item name="rippleColor">@color/transparent</item>
    </style>

    <!-- Shapeable Image Corner -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Rounding_10_per_ImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="Bottom_Rounding_10_per_ImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">10%</item>
        <item name="cornerSizeBottomRight">10%</item>
    </style>

    <!-- Number Picker Custom -->
    <style name="NumberPickerCustomSize">
        <!-- Divider color -->
        <item name="colorControlNormal">@color/Primary_03</item>
        <!--Display textSize-->
        <item name="android:textSize">14sp</item>
        <!--Display textColor-->
        <item name="android:editTextColor">@color/Primary_03</item>
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
    </style>

</resources>