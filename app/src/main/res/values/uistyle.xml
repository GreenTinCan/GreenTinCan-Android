<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Bottom Navigation Style -->
    <style name="Widget.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.BottomNavigationView.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/Primary_08</item>
    </style>

    <style name="Widget.BottomNavigationView.InActive" parent="Widget.BottomNavigationView">
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
    </style>

    <style name="Widget.BottomNavigationView.Active" parent="Widget.BottomNavigationView">
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
    </style>

    <!-- Button Style -->
    <style name="Widget.AppCompatButton.Gradient" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_gradient_purple_blue</item>
        <item name="android:textAppearance">@style/Text_16_Medium.Base_09</item>
    </style>

</resources>